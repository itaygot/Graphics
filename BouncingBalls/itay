
INCLUDE_PATH = -I ../Include
LIBS = -lGLEW -lglut -lGL
INCLUDE_FILES = bouncingBalls.h ShaderIO.h

build: main

main: main.cpp $(INCLUDE_FILES) ShaderIO.o bouncingBalls.o
	g++ -std=c++11 main.cpp ShaderIO.o bouncingBalls.o $(INCLUDE_PATH) $(LIBS) \
	-o main

bouncingBalls.o: bouncingBalls.h bouncingBalls.cpp
	g++ -c -std=c++11 bouncingBalls.cpp $(INCLUDE_PATH) -o bouncingBalls.o

ShaderIO.o: ShaderIO.h ShaderIO.cpp
	g++ -c -std=c++11 ShaderIO.cpp $(INCLUDE_PATH) -o ShaderIO.o

clean:
	rm -f bouncingBalls.o ShaderIO.o

.PHONY: clean build